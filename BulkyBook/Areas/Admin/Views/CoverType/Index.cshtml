@using System.Security.Cryptography
@model IEnumerable<CoverType>



<div class="container p-3">
    <div class="row pt-4">

        <div class="col-6 text" style="color: goldenrod; font-weight: bold; font-size: 24px;">
            CoverType List
        </div>

        <div class="col-6 text-end">
            <a asp-controller="CoverType" asp-action="Create" class="btn btn-primary" style="background-color: goldenrod"><i class="bi bi-plus-circle"></i>&nbsp;Create New CoverType</a>
        </div>

    </div>
</div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th class="col-6">
                CoverType Name 
            </th>
            <th class="col-6">

            </th>
        </tr>
    </thead>
    <tbody>

        @{
            foreach (var obj in Model)
            {
                <tr>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="CoverType" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>Edit
                            </a>
                            <a asp-controller="CoverType" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i>Delete
                            </a>
                        </div>

                    </td>
                </tr>
            }
        }


    </tbody>
</table>